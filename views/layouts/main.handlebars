<body>

 <header class="headers">
    <nav class="navbar navbar-expand-lg bg-body-tertiary-salmon" id="navs">
        <div class="container-fluid" id= "margin">
          <div class="navbar-brand"><img src="/images/logo.png" width="288px" height="100px" alt="logo of the DJ R Us"></div>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" id="hamburgers">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse yolo" id="navbarNav">
            <ul class="navbar-nav" id="navbarlinks">
              <li class="nav-item">
                <a class="nav-link" href="/addjoke">Add Joke</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
              </li>
              {{#if loggedIn}}
              <li class="nav-item">
                <button class="nav-link" id="logout-btn">Logout</button>
              </li>
              {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
  </header>

  <main>
    {{{body}}}
